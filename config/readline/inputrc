set completion-ignore-case on
set show-all-if-ambiguous on
set match-hidden-files off
set page-completions off

# if more then 100 items ask to how them all
set completion-query-items 100

# immediately add a trailing slash when autocompleting symlinks to directories
set mark-symlinked-directories on

# consider text after curser in completions (bash 4)
set skip-completed-text on

# use utf8
set input-meta on
set output-meta on
set convert-meta off

# use the text that has already been typed when using up/down
"\e[B": history-search-forward
"\e[A": history-search-backward

# alt+backspace to delete the preceeding word
"\e[3;3~": kill-word

# enable alt arrows
"\e[1;5D": backward-word # alt left
"\e[1;5C": forward-word # alt right
